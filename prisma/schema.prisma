// datasource and generator setup
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------------------------------------------------------
//  ENUMS
// ---------------------------------------------------------

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum Provider {
  EMAIL
  GOOGLE
  FACEBOOK
}

// ---------------------------------------------------------
//  MODEL
// ---------------------------------------------------------

model User {
  id           String     @id @default(uuid()) @db.Uuid
  firstName    String
  lastName     String?
  phoneNumber  String?
  email        String?    @unique
  password     String?
  provider     Provider   @default(EMAIL)
  role         UserRole   @default(USER)
  status       UserStatus @default(ACTIVE)
  profileImage String?
  uniqueId     String?

  otp          String?
  otpExpiresAt DateTime?

  admins       Admin?
  isVerified   Boolean @default(false)
  accessToken  String?
  refreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Admin {
  id String @id @default(uuid()) @db.Uuid

  userId String @unique @map("userId") @db.Uuid // Explicitly set as @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  adminId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}
